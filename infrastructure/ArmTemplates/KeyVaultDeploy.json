{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "sites": {
        "type": "array",
        "metadata": {
            "description": "array of objects with a siteName property."
        }
      },
      "ResourceGroup": {
        "type": "string",
        "metadata": {
            "description": "The name of the resource group the Azure App Service Plan belongs to."
        }
      },
      "subscriptionId": {
        "type": "string",
        "metadata": {
            "description": "The ID of the subscription the Azure App Service Plan belongs to."
        },
        "defaultValue": "[subscription().tenantId]"
      },
      "KeyVaultName": {
        "type": "string",
        "metadata": {
            "description": "The name of the KeyVault."
        }
      }
    },
    "variables": {
      "tenantId": "[subscription().tenantId]"
     },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('keyVaultName'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "copy" : [
                    {
                        "name": "accessPolicies",
                        "count": "[length(parameters('sites'))]",
                        "input": {
                            "tenantId": "[variables('tenantId')]",
                            "objectId": "[reference(concat(resourceId(parameters('subscriptionId'), parameters('ResourceGroup'), 'Microsoft.Web/sites', parameters('sites')[copyIndex('accessPolicies')].siteName),'/slots/staging/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]",
                            "permissions": {
                                "secrets": [
                                    "get","list"
                                ]
                            } 
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('keyVaultName'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "copy" : [
                    {
                        "name": "accessPolicies",
                        "count": "[length(parameters('sites'))]",
                        "input": {
                            "tenantId": "[variables('tenantId')]",
                            "objectId": "[reference(concat(resourceId(parameters('subscriptionId'), parameters('ResourceGroup'), 'Microsoft.Web/sites', parameters('sites')[copyIndex('accessPolicies')].siteName),'/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]",
                            "permissions": {
                                "secrets": [
                                    "get","list"
                                ]
                            } 
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('keyVaultName'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "accessPolicies": [
                    {
                        "tenantId": "[variables('tenantId')]",
                        // todo this changes if the tennant ID changes.
                        "objectId": "f8daea97-62e7-4026-becf-13c2ea98e8b4",
                        "permissions": {
                            "secrets": [
                                "get"
                            ],
                            "certificates": [
                                "get"
                            ]
                        } 
                    }
                ]
            }
        }
    ]
}